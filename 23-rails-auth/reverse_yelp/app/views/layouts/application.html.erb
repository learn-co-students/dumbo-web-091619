<!DOCTYPE html>
<html>
  <head>
    <title>Reverse Yelp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="menu">
      <div class="container">
        <%= link_to "", root_path, class: "logo" %>
        <nav>
          <%= link_to "Customers", customers_path, class: "item" %>
          <%= link_to "Restaurants", restaurants_path, class: "item" %>
        </nav>
        <nav class="right">
          <span class="item">
            <% if @current_restaurant == nil %>
              <%= link_to "Sign Up", new_restaurant_path, class: "item" %>
              <%= link_to "Login", login_path, class: "item" %>
            <% else %>
              Welcome, <%= @current_restaurant.username %>!
              <%= link_to "Logout", "/logout", method: :delete, class: "item" %>
            <% end %>
          </span>
        </nav>
      </div>
    </header>
    <div class="main">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
