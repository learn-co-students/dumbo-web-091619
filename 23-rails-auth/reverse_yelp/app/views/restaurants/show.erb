<%= render "shared/heading", title: @restaurant.name %>

<div class="yelp-info">
  <div class="yelp-info__image">
    <%= image_tag @restaurant.image_url %>
  </div>
  <div class="yelp-info__main">
    <p>
      <%= simple_format @restaurant.address %>
    </p>
    <%= "â­ï¸" * @restaurant.rating.to_i %>
    <div class="yelp-info__actions">
      <% if @current_restaurant == @restaurant %>
        <%= link_to "Edit", edit_restaurant_path(@restaurant) %>
        <%= link_to "Delete", @restaurant, method: :delete %>
      <% end %>
    </div>
  </div>
</div>

<hr>

<ul class="yelp-info__list">
  <h3>Customers</h3>
  <% @restaurant.customers.each do |customer| %>
    <li><%= link_to customer.name, customer %></li>
  <% end %>
</ul>