<%= render "shared/heading", title: "Create a new restaurant" %>

<%= form_for @restaurant, html: { class: "form" } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_area :address %>
  
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li class="error"><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.submit class: "button" %>
<% end %>